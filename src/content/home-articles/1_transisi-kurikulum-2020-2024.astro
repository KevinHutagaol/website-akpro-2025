<style>
    a {
        display: block;
        color: inherit;
        text-decoration: none;
        text-decoration-color: transparent;
        width: 100%;
    }

    h3 {
        color: rgb(var(--accent));

    }

    .description {
        line-height: 1.5;
    }


    .wrapper {
        display: flex;
        width: 100%;
    }

    .wrapper-cards {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    @media screen and (min-width: 600px) {
        .wrapper-cards {
            display: flex;
            flex-direction: row;
            gap: 1rem;
            flex-wrap: nowrap;
            overflow-x: visible;
            flex: 1;
        }
    }

</style>

