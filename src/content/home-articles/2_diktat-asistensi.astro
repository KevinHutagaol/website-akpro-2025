---
import ArticleCards from "../../components/ArticleCards.astro";
import AnchorCard from "../../components/AnchorCard.astro";
import { YOUTUBE_URL } from "astro:env/client";
---

<ArticleCards title="Diktat dan Asistensi">
    <div slot="cards" class="intro-cards">
        <AnchorCard href="/diktat-asistensi">
            <h3>Diktat dan Asistensi Terbaru
                <svg class="svg-icon"><use href="#arrow-top-right-on-square"/></svg>
            </h3>
            <p class="large-icon-wrapper"><svg class="svg-icon"><use href="#book-open"/></svg> Main Page Diktat dan Asistensi</p>
        </AnchorCard>
        <AnchorCard href={YOUTUBE_URL}>
            <h3>Rekaman Asistensi
                <svg class="svg-icon"><use href="#arrow-top-right-on-square"/></svg>
            </h3>
            <p class="large-icon-wrapper"><svg class="svg-icon"><use href="#youtube-logo"/></svg> Channel Youtube Akpro</p>
        </AnchorCard>
    </div>
</ArticleCards>

<style>
    a {
        display: block;
        color: inherit;
        text-decoration: none;
        text-decoration-color: transparent;
        width: 100%;
    }

    .icon-a {
        transform: translateY(-1px);
    }

    .icon-b {
        transform: translateY(-1px);
    }

    .material-symbols-rounded {
        font-size: inherit;
    }

    .intro-cards {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-block-start: 1rem;
        width: 100%;
    }

    h3 {
        text-decoration: none;
        color: inherit;
        position: relative;
        isolation: isolate;
        border-bottom: 1px solid rgb(var(--accent));
        text-wrap: balance;
    }
</style>

