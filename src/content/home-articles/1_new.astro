---
import ArticleCards from "../../components/ArticleCards.astro";
import AnchorCard from "../../components/AnchorCard.astro";
---

<ArticleCards title="">
    <div slot="cards" class="intro-cards">
        <AnchorCard href="https://drive.google.com/file/d/1AT30fW77EQTK3WBDl0rMtbRzDaHzKsIF/view?usp=sharing">
            <h3>Kalender Akademik <i class="material-symbols-rounded icon-a">double_arrow</i></h3>
            <p><i class="material-symbols-rounded icon-b">calendar_month</i> Kalender Akademik FTUI Semester Genap
                2024/2025</p>
        </AnchorCard>
    </div>
</ArticleCards>

<style>
    a {
        display: block;
        color: inherit;
        text-decoration: none;
        text-decoration-color: transparent;
        width: 100%;
    }

    .icon-a {
        transform: translateY(-1px);
    }

    .icon-b {
        transform: translateY(-2px);
    }

    .material-symbols-rounded {
        font-size: inherit;
    }

    .intro-cards {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-block-start: 1rem;
        width: 100%;
    }

    h3 {
        text-decoration: none;
        color: inherit;
        position: relative;
        isolation: isolate;
        border-bottom: 1px solid rgb(var(--accent));
        text-wrap: balance;
    }
</style>
