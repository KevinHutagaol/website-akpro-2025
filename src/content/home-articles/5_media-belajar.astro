<style>
    a {
        display: block;
        color: inherit;
        text-decoration: none;
        text-decoration-color: transparent;
        width: 100%;
    }

    .icon-a {
        transform: translateY(-1px);
    }

    .icon-b {
        transform: translateY(-1px);
    }

    .material-symbols-rounded {
        font-size: inherit;
    }

    .intro-cards {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-block-start: 1rem;
        width: 100%;
    }

    h3 {
        text-decoration: none;
        color: inherit;
        position: relative;
        isolation: isolate;
        border-bottom: 1px solid rgb(var(--accent));
        text-wrap: balance;
    }
</style>

