---
import ArticleCards from "../../components/ArticleCards.astro";
import AnchorCard from "../../components/AnchorCard.astro";
---

<ArticleCards title="Media Belajar">
    <div slot="cards" class="intro-cards">
        <AnchorCard href="/diktat-asistensi">
            <h3>Diktat dan Asistensi Terbaru <i class="material-symbols-rounded icon-a">double_arrow</i></h3>
            <p><i class="material-symbols-rounded icon-b">calendar_month</i> Main Page Diktat dan Asistensi</p>
        </AnchorCard>
        <AnchorCard href="https://youtube.com/@akademisdankeprofesianime2024?si=sAk9-wxTvyHhRY3T">
            <h3>Rekaman Asistensi<i class="material-symbols-rounded icon-a">double_arrow</i></h3>
            <p><i class="material-symbols-rounded icon-b">smart_display</i> Channel Youtube Akpro</p>
        </AnchorCard>
    </div>
</ArticleCards>

<style>
    a {
        display: block;
        color: inherit;
        text-decoration: none;
        text-decoration-color: transparent;
        width: 100%;
    }

    .icon-a {
        transform: translateY(-1px);
    }

    .icon-b {
        transform: translateY(-2px);
    }

    .material-symbols-rounded {
        font-size: inherit;
    }

    .intro-cards {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-block-start: 1rem;
        width: 100%;
    }

    h3 {
        text-decoration: none;
        color: inherit;
        position: relative;
        isolation: isolate;
        border-bottom: 1px solid rgb(var(--accent));
        text-wrap: balance;
    }
</style>

